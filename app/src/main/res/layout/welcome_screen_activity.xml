<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startbackgr"
    tools:context=".Welcome_screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/oval1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/oval"
            android:rotation="45">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/oval2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/oval"
            android:rotation="-75">

        </FrameLayout>

        <TextView
            android:id="@+id/textLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/rammetto_one"
            android:gravity="center_horizontal"
            android:text="@string/Logo"
            android:textColor="@android:color/background_light"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textLogo"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="@string/slogan"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TextSlogan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textSlogan"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="@string/slogan2"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>