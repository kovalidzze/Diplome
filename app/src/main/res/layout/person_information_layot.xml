<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pandbp"
    tools:context=".PersonInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/pramoygolnik"
            android:layout_width="330dp"
            android:layout_height="615dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pramoygolnik">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PersonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/personInfText"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/PersonText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/personInfText2"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="Твое имя"
                    android:textColor="@android:color/background_dark"
                    android:textSize="19dp"
                     />

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введи имя"
                    android:inputType="textPersonName"/>

                <TextView
                    android:id="@+id/oldLab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Твой возраст"
                    android:textColor="@android:color/background_dark"
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/oldIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введи возраст"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/polLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Пол"
                    android:textColor="@android:color/background_dark"
                    android:textSize="19dp" />

                <Spinner
                    android:id="@+id/pol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:text="Далее" />


            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>