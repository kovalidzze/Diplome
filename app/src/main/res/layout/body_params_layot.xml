<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pandbp"
    tools:context=".BodyParamsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/pramoygolnik"
            android:layout_width="330dp"
            android:layout_height="615dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pramoygolnik">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BodyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/BodyInfText"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/BPImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/press" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="164dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="8dp">

                        <TextView
                            android:id="@+id/rostLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Рост"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/rostInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи рост"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/orlLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват левой руки"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/orlInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват лр"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/oprLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват правой руки"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/oprInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват пр"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/ogLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват груди"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/ogInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват г"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/otLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват талии"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/otInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват т"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/ogivLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват живота"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/ogivInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват ж"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="8dp">

                        <TextView
                            android:id="@+id/vesLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Вес"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/vesInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи вес"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/obLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват бедер"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/obInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват б"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/olnLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват левой ноги"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/olnInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват лн"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/opnLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват правой ноги"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/opnInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват пн"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/oliLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват левой икры"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/oliInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват ли"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/opiLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Обхват правой икры"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/opiInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Введи обхват пи"
                            android:inputType="number" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:text="Готов? Поехали!" />

            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>